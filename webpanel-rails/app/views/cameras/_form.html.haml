= simple_form_for @camera, :html => { :class => 'form-horizontal' } do |f|
  = f.input :code
  = f.input :url
  = f.input :about
  = f.input :analize_frames
  = f.input :threshold
  = f.input :motion_delay

  .form-actions
    = f.submit 'Сохранить', class: 'btn btn-primary'
    = link_to 'Отмена', cameras_path, class: 'btn'
